    <form action="/contact" novalidate method="POST" class="validated-form">
      <div class="row">
        <div class="mb-3 col-6">
          <label for="phone" class="form-label">Phone Number</label>
          <input type="tel" class="form-control" id="phone"  name="contact[phone]" aria-describedby="phoneHelp" placeholder="(888) 867-5309">
        </div>
        <div class="valid-feedback">
          Looks good!
      </div>
        <div class="mb-3 col-6">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" aria-describedby="emailHelp" name="contact[email]" placeholder="example@provider.com">
          </div>
          <div class="valid-feedback">
            Looks good!
        </div>
      </div>
        <div class="mb-3">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" class="form-control" id="subject" aria-describedby="subjectHelp" name="contact[subject]" placeholder="Enter a subject">
          </div>
          <div class="valid-feedback">
            Looks good!
        </div>
        <div class="mb-3">
          <label for="message">Message</label>
          <textarea class="form-control" name="contact[message]" id="message" cols="30" rows="7" placeholder="Your message here"></textarea>
        </div>
          <div class="valid-feedback">
            Looks good!
        </div>
          <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      
      