<% layout('layout/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/show.css">
<h1>Edit Design</h1>
    <form action="/designs/<%=design._id%>?_method=PUT" novalidate method="POST" class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Design Title</label>
          <input type="text" class="form-control" id="title"  name="design[title]" value="<%= design.title %>" aria-describedby="titleHelp">
        </div>
        <div class="valid-feedback">
          Looks good!
      </div>
        <div class="mb-3">
            <label for="description" class="form-label">Design Description</label>
            <input type="text" class="form-control" id="description" aria-describedby="descriptionHelp" name="design[description]" value="<%= design.description %>">
          </div>
          <div class="valid-feedback">
            Looks good!
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" id="date" aria-describedby="dateHelp" name="design[date]" value="<%= design.date %>">
          </div>
          <div class="valid-feedback">
            Looks good!
        </div>
        <div class="mb-3">
          <label for="category">Category</label>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="design[category]" id="category1" value="Commercial">
            <label class="form-check-label" for="category1">
              Commercial
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="design[category]" id="category2" value="Commission" checked>
            <label class="form-check-label" for="category2">
              Comission
            </label>
          </div>
        </div>
          <div class="valid-feedback">
            Looks good!
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Add Design</label>
          <input class="form-control" type="file" id="image" multiple name="image">
      </div>
      <div class="valid-feedback">
        Looks good!
    </div>
    <div class="mb-3">
      <% design.images.forEach(function(img, i) {  %>
      <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
      <div class="form-check-inline">
          <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
      </div>
      <label for="image-<%=i%>">Delete?</label>
      <% })%>
  </div>
          <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      
      
