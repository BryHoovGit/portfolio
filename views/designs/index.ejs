<% layout('layout/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/design.css">
<h1>Graphic Design</h1>
<% if(currentUser && currentUser._id == "60d294755bcdbf2c28ce125d") {%>
<a href="/designs/new" class="btn btn-primary mb-3">New Design</a>
<% } %> 
<% for(let design of designs){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(design.images.length) {%>
                    <img class="img-fluid" alt="" src="<%=design.images[0].url%>">
                    <% }else {%>
                    <img class="img-fluid" alt=""
                        src="https://res.cloudinary.com/bryce-test-env/image/upload/v1622741040/YelpCamp/ktm7ywhmm54fdhxu4gax.jpg">
                    <% } %>
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= design.name %>
                    </h5>
                    <p class="card-text">
                        <%= design.description %>
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= design.author %>
                        </small>
                    </p>
                    <a href="/designs/<%= design._id %>" class="btn btn-primary">View <%= design.name %></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>