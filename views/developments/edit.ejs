<% layout('layout/boilerplate')%>

<h1>Edit <%= development.title %> </h1>
<link rel="stylesheet" href="/stylesheets/show.css">
    <form action="/development/<%=development._id%>?_method=PUT" novalidate method="POST" class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Project Title</label>
          <input type="text" class="form-control" id="title"  name="development[title]" aria-describedby="titleHelp" value="<%= development.title %>" >
        </div>
        <div class="valid-feedback">
          Looks good!
      </div>
        <div class="mb-3">
            <label for="description" class="form-label">Project Description</label>
            <input type="text" class="form-control" id="description" aria-describedby="descriptionHelp" name="development[description]" value="<%= development.description %>">
          </div>
          <div class="valid-feedback">
            Looks good!
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">Date</label>
            <input type="date" class="form-control" id="date" aria-describedby="dateHelp" name="development[date]" value="<%= development.date %>">
          </div>
          <div class="valid-feedback">
            Looks good!
        </div>
        <div class="mb-3">
          <label for="url">GitHub Repo URL</label>
          <input type="url" class="form-control" id="url" name="development[gitUrl]" aria-describedby="urlHelp" value="<%= development.gitUrl %>">
        </div>
          <div class="valid-feedback">
            Looks good!
        </div>
        <div class="mb-3">
          <label for="projectUrl">Project URL</label>
          <input type="url" class="form-control" id="projectUrl" name="development[projectUrl]" aria-describedby="urlHelp" value="<%= development.projectUrl %>">
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Add Preview Image</label>
          <input class="form-control" type="file" id="image" multiple name="image">
      </div>
      <div class="valid-feedback">
        Looks good!
    </div>
    <div class="mb-3">
      <% development.images.forEach(function(img, i) {  %>
      <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
      <div class="form-check-inline">
          <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
      </div>
      <label for="image-<%=i%>">Delete?</label>
      <% })%>
  </div>
  <div class="mb-3">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>

      
      