<% layout('layout/boilerplate')%>

    <h1>New Resum√©</h1>
    <form action="/resumes" novalidate method="POST" class="validated-form">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name"  name="resume[name]" aria-describedby="nameHelp">
          <div class="valid-feedback">
            Looks good!
        </div>
        </div>
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phoneNumber" aria-describedby="nameHelp" name="resume[phoneNumber]" placeholder="(555)-555-5555">
            <div class="valid-feedback">
              Looks good!
          </div>
            <div id="nameHelp" class="form-text">We'll never share your info with anyone else.</div>
          </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="resume[email]">
            <div class="valid-feedback">
              Looks good!
          </div>
            <div id="nameHelp" class="form-text">We'll never share your info with anyone else.</div>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>